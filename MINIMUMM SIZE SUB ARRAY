int minSubArrayLen(int target, int* nums, int numsSize) {
    int left = 0, sum = 0;
    int minLen = numsSize + 1;  // initialize with max possible length + 1

    for (int right = 0; right < numsSize; right++) {
        sum += nums[right];

        // Shrink the window while sum >= target
        while (sum >= target) {
            if (right - left + 1 < minLen)
                minLen = right - left + 1;
            sum -= nums[left];
            left++;
        }
    }

    return (minLen == numsSize + 1) ? 0 : minLen;
}
